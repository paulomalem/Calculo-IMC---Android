<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#031628"
    android:gravity="center"
    tools:context="br.com.paulomalem.calculoimc.SobreActivity">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="IMC"
                android:textSize="100dp"
                android:textStyle="bold"
                android:id="@+id/textImc"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="0dp"
                android:textAlignment="center"
                android:textColor="#236023"
                android:gravity="top" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="25dp"
            android:paddingBottom="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O que é IMC?"
                android:id="@+id/textViewOque"
                android:textColor="#236023"
                android:textIsSelectable="false"
                android:textSize="25dp"
                android:paddingRight="10dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:paddingBottom="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A sigla IMC é utilizada para Índice de Massa Corporal."
                android:id="@+id/textViewIntro"
                android:textColor="#236023"
                android:textIsSelectable="false"
                android:textSize="18dp"
                android:paddingRight="10dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:paddingBottom="25dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Definido pela OMS (Organização Mundial de Saúde) o IMC é uma medida utilizada para medir o nível de obesidade. É um padrão internacional de avaliação dos graus de obesidade."
                android:id="@+id/textView3"
                android:textColor="#236023"
                android:textIsSelectable="false"
                android:textSize="18dp"
                android:paddingRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:paddingBottom="25dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vários tipos de doenças estão relacionadas ao sobrepeso e a obesidade, que podem ser indicados pelo IMC, dentre elas podemos destacar algumas mais conhecidas como a hipertensão arterial, diabetes melittus, a doença arterial coronariana, além de outras consideradas de alto risco."
                android:id="@+id/textView4"
                android:textColor="#236023"
                android:textIsSelectable="false"
                android:textSize="18dp"
                android:paddingRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:paddingBottom="25dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O IMC também é utilizado como forma de comparar a saúde de populações, ou até mesmo ser utilizado para perscrição de medicações."
                android:id="@+id/textView5"
                android:textColor="#236023"
                android:textIsSelectable="false"
                android:textSize="18dp"
                android:paddingRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:paddingBottom="25dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O IMC pode não corresponder ao mesmo grau de gordura em diferentes populações devido às diferentes proporções do corpo, também vale lembrar que os valores de IMC são indenpentendes de idade e sexo."
                android:id="@+id/textView6"
                android:textColor="#236023"
                android:textIsSelectable="false"
                android:textSize="18dp"
                android:paddingRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:paddingBottom="25dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Como dito nos paragráfos acima, o IMC pode ser diferente em cada população, sendo assim os dados obtidos através do cálculo é recomendado passar por uma análise geral para ser corretamente interpretado."
                android:id="@+id/textView7"
                android:textColor="#236023"
                android:textIsSelectable="false"
                android:textSize="18dp"
                android:paddingRight="10dp" />
        </LinearLayout>



    </LinearLayout>

</ScrollView>
